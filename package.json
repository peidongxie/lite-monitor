{
  "name": "sql-exam-monitor",
  "repository": "https://github.com/sunshinezxf/sqlexammonitor.git",
  "author": "谢沛东 <peidongxie@outlook.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "monitor-base",
    "monitor-node",
    "monitor-web",
    "node-demo-express",
    "node-demo-koa",
    "web-demo-react"
  ],
  "scripts": {
    "build": "yarn workspace backend build && yarn workspace frontend build",
    "build:lib": "yarn workspace @lite-monitor/base build && yarn workspace @lite-monitor/node build && yarn workspace @lite-monitor/web build",
    "postinstall": "husky install",
    "reinstall": "rm -r ./node_modules */node_modules && yarn",
    "start": "yarn workspace backend start && yarn workspace frontend dev",
    "start:express": "yarn workspace node-demo-express start",
    "start:koa": "yarn workspace node-demo-koa start",
    "start:react": "yarn workspace web-demo-react start",
    "stats": "cloc $(git ls-files) && echo 'Commits:' $(git log --oneline | wc -l)"
  },
  "devDependencies": {
    "husky": "^6.0.0"
  }
}
