{
  "name": "lite-monitor",
  "version": "1.2.0",
  "private": true,
  "description": "An event tracking library for Node.js and web browsers",
  "keywords": [
    "event tracking"
  ],
  "homepage": "https://github.com/peidongxie/lite-monitor#readme",
  "bugs": {
    "url": "https://github.com/peidongxie/lite-monitor/issues",
    "email": "peidongxie@outlook.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peidongxie/lite-monitor.git"
  },
  "license": "MIT",
  "author": {
    "name": "谢沛东",
    "email": "peidongxie@outlook.com",
    "url": "https://github.com/peidongxie"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:app": "pnpm --filter backend --filter frontend build",
    "build:demo": "pnpm --filter *-demo build",
    "build:lib": "pnpm --filter @lite-monitor/* build",
    "dev:app": "pnpm --filter backend frontend dev",
    "prepare": "husky install",
    "publish:lib": "pnpm -r publish",
    "start:app": "pnpm --filter backend --filter frontend start",
    "stats": "cloc $(git ls-files) && echo 'Commits:' $(git log --oneline | wc -l)"
  },
  "devDependencies": {
    "@parcel/core": "^2.7.0",
    "@parcel/packager-raw-url": "^2.7.0",
    "@parcel/transformer-webmanifest": "^2.7.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "sort-package-json": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
