  },
  "type": "commonjs",
  "scripts": {
    "build": "docker rmi peidongxie/lite-monitor-backend && docker build --build-arg NPM_REGISTRY=${NPM_REGISTRY} -f docker/Dockerfile -t peidongxie/lite-monitor-backend ../../",
    "dev": "docker compose -f docker/compose.dev.yaml -p lite-monitor up -d && NODE_ENV=development webpack",
    "down": "docker compose -p lite-monitor down",
    "fix": "eslint src --ext .ts --fix",
    "lint": "eslint src --ext .ts",
    "start": "docker compose -f docker/compose.prod.yaml -p lite-monitor up -d"
  },
  "dependencies": {
    "@fastify/cors": "^7.0.0",
    "@fastify/mongodb": "^5.0.0",
    "@fastify/sensible": "^4.1.0",
    "@lite-monitor/base": "workspace:*",
    "fastify": "^3.29.5",
    "pino-pretty": "^7.6.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "mongodb": "^4.16.0",
    "nodemon-webpack-plugin": "^4.8.1",
    "prettier": "^2.8.8",
